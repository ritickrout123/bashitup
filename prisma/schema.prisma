generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  phone        String?       @unique
  name         String
  role         UserRole      @default(CUSTOMER)
  password     String?
  googleId     String?       @unique
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  bookings     Booking[]
  decorations  Booking[]     @relation("DecoratorBookings")
  testimonials Testimonial[]

  @@map("users")
}

model Theme {
  id             String          @id @default(cuid())
  name           String
  description    String
  category       EventCategory
  images         String
  videoUrl       String?
  basePrice      Float
  setupTime      Int
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  bookings       Booking[]
  portfolioItems PortfolioItem[]
  themeAddons    ThemeAddon[]

  @@map("themes")
}

model PortfolioItem {
  id          String       @id @default(cuid())
  themeId     String
  title       String
  description String
  beforeImage String
  afterImages String
  videoUrl    String?
  eventDate   DateTime
  location    String
  isPublic    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  theme       Theme        @relation(fields: [themeId], references: [id], onDelete: Cascade)
  testimonial Testimonial?

  @@map("portfolio_items")
}

model Booking {
  id                String         @id @default(cuid())
  customerId        String
  occasionType      String
  themeId           String
  date              DateTime
  startTime         String
  endTime           String
  guestCount        Int
  totalAmount       Float
  status            BookingStatus  @default(PENDING)
  paymentStatus     PaymentStatus  @default(PENDING)
  decoratorId       String?
  specialRequests   String?
  paymentIntentId   String?
  paidAmount        Float?
  callbackRequested Boolean        @default(false)
  preferredCallTime DateTime?
  callbackNotes     String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  location          Json
  addons            BookingAddon[]
  customer          User           @relation(fields: [customerId], references: [id])
  decorator         User?          @relation("DecoratorBookings", fields: [decoratorId], references: [id])
  theme             Theme          @relation(fields: [themeId], references: [id])
  payments          Payment[]
  testimonial       Testimonial?

  @@map("bookings")
}

model Addon {
  id            String         @id @default(cuid())
  name          String
  description   String
  price         Float
  category      String
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  bookingAddons BookingAddon[]
  themeAddons   ThemeAddon[]

  @@map("addons")
}

model BookingAddon {
  id        String  @id @default(cuid())
  bookingId String
  addonId   String
  quantity  Int     @default(1)
  price     Float
  addon     Addon   @relation(fields: [addonId], references: [id])
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@unique([bookingId, addonId])
  @@map("booking_addons")
}

model ThemeAddon {
  id      String @id @default(cuid())
  themeId String
  addonId String
  addon   Addon  @relation(fields: [addonId], references: [id])
  theme   Theme  @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@unique([themeId, addonId])
  @@map("theme_addons")
}

model Payment {
  id               String        @id @default(cuid())
  bookingId        String
  amount           Float
  paymentMethod    String
  paymentGateway   String
  gatewayPaymentId String?
  status           PaymentStatus @default(PENDING)
  paidAt           DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  booking          Booking       @relation(fields: [bookingId], references: [id])

  @@map("payments")
}

model Testimonial {
  id              String         @id @default(cuid())
  customerId      String
  bookingId       String         @unique
  portfolioItemId String?        @unique
  rating          Int
  comment         String
  images          String
  videoUrl        String?
  isPublic        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  booking         Booking        @relation(fields: [bookingId], references: [id])
  customer        User           @relation(fields: [customerId], references: [id])
  portfolioItem   PortfolioItem? @relation(fields: [portfolioItemId], references: [id])

  @@map("testimonials")
}

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_config")
}

enum UserRole {
  CUSTOMER
  ADMIN
  DECORATOR
}

enum EventCategory {
  BIRTHDAY
  ANNIVERSARY
  BABY_SHOWER
  WEDDING_PROPOSAL
}

enum BookingStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}
